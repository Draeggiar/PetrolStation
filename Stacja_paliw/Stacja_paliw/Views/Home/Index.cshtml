@*@model IEnumerable<DomainModel.VAT>*@

@{
    ViewBag.Title = "Home Page";
}

@section style {
    <link href="~/Content/Home.css" rel="stylesheet" type="text/css" />
    }

@section scripts {
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script type="text/javascript">
        $("#btn-1-img").click(function () {
        $.get('@Url.Action("PartialHistory", "VATs")', {}, function (response) {
            $("#VatsPartial").html(response);
        });
            $("#LoyalityPartial").hide();
            if($("#VatsPartial").is(":visible")){
                $("#VatsPartial").hide();
            }
            else {
                $("#VatsPartial").show();
            }           
        });
    </script>
    <script type="text/javascript">
            $("#btn-2-img").click(function () {
            $.get('@Url.Action("LoyalityPartial", "Home")', {}, function (response) {
                $("#LoyalityPartial").html(response);
            });
                $("#VatsPartial").hide();
                if ($("#LoyalityPartial").is(":visible")) {
                    $("#LoyalityPartial").hide();
                }
                else {
                    $("#LoyalityPartial").show();
                }
            });
    </script>
