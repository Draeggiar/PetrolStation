        function HideVat() {
            var x = document.getElementById('LoyalityPartial');
            if (x.style.display === 'block') {
                x.style.display = 'none';
            }
        }
    </script>*@
    }

<div class="container main">
    <div class="row">
        <div class="col-6 col-sm-3 col-md-3">
            <figure class="figure">
                <img src="~/Resource/pb95.png" class="figure-img img-fluid img-responsive center-block" alt="Pb95">
                <figcaption class="figure-caption text-center font-weight-bold price">@Html.Raw(ViewBag.pb95)</figcaption>
            </figure>
        </div>
        <div class="col-6 col-sm-3 col-md-3">
            <figure class="figure">
                <img src="~/Resource/pb98.png" class="figure-img img-fluid img-responsive center-block" alt="Pb98">
                <figcaption class="figure-caption text-center font-weight-bold price">@Html.Raw(ViewBag.pb98)</figcaption>
            </figure>
        </div>
        <div class="col-6 col-sm-3 col-md-3">
            <figure class="figure">
                <img src="~/Resource/diesel.png" class="figure-img img-fluid img-responsive center-block" alt="On">
                <figcaption class="figure-caption text-center font-weight-bold price">@Html.Raw(ViewBag.diesel)</figcaption>
            </figure>
        </div>
        <div class="col-6 col-sm-3 col-md-3">
            <figure class="figure">
                <img src="~/Resource/lpg.png" class="figure-img img-fluid img-responsive center-block" alt="Lpg">
                <figcaption class="figure-caption text-center font-weight-bold price">@Html.Raw(ViewBag.lpg)</figcaption>
            </figure>
        </div>
    </div>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="d-block img-fluid" src="~/Resource/Wojtek.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="~/Resource/Tadek.png" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="~/Resource/Kamil.png" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div id="nav-btns" class="btn-group btn-group-justified" role="group" aria-label="...">
        <div class="btn-group" role="group">
            <button id="btn-1" type="button" class="btn btn-default btn-scale">
                <img id="btn-1-img" src="~/Resource/button_vat.png" alt="..." class="btn-img img-fluid">
            </button>
        </div>
        <div class="btn-group" role="group">
            <button id="btn-2" type="button" class="btn btn-default btn-scale">
                <img id="btn-2-img" src="~/Resource/button_loyal.png" alt="..." class="btn-img img-fluid">
            </button>
        </div>
        <div class="btn-group" role="group">
            <button id="btn-3" type="button" class="btn btn-default btn-scale">
                <img id="btn-3-img" src="~/Resource/button_myjnia.png" alt="..." class="btn-img img-fluid">
            </button>
        </div>
    </div>
    <div id="VatsPartial"></div>
    <div id="LoyalityPartial"></div>
</div>