@model DomainModel.Price

@{
    ViewBag.Title = "Home Page";
}

@*@Html.Partial("_UserHomePartial")*@

@section style {
    <link href="~/Content/Home.css" rel="stylesheet" type="text/css" />
    }
<hr /><hr />

<div class="container main">
    <div class="row">
        <div class="col-6 col-sm-3 col-md-3">
            <figure class="figure">
                <img src="http://petro-hurt.pl/wp-content/uploads/2014/03/pb95.gif" class="figure-img img-fluid img-responsive center-block" alt="Pb95">
                <figcaption class="figure-caption text-center font-weight-bold price">@Html.DisplayFor(Model => Model.Pb95)</figcaption>
            </figure>
        </div>
        <div class="col-6 col-sm-3 col-md-3">
            <figure class="figure">
                <img src="http://www.petroenergia.pl/sites/all/themes/business/images/pb98.gif" class="figure-img img-fluid img-responsive center-block" alt="Pb98">
                <figcaption class="figure-caption text-center font-weight-bold price">@Html.DisplayFor(Model => Model.Pb98)</figcaption>
            </figure>
        </div>
        <div class="col-6 col-sm-3 col-md-3">
            <figure class="figure">
                <img src="http://www.stacjaoktan.pl/uploads/images/ON%20diesel.png" class="figure-img img-fluid img-responsive center-block" alt="On">
                <figcaption class="figure-caption text-center font-weight-bold price">@Html.DisplayFor(Model => Model.On)</figcaption>
            </figure>
        </div>
        <div class="col-6 col-sm-3 col-md-3">
            <figure class="figure">
                <img src="https://lh6.ggpht.com/tnP5VzQeEUjie6NRqPuijp49Brz0Z8PqouUOEZGc48IP908FOOWQ1VCKasdWRUUqjiw=w300" class="figure-img img-fluid img-responsive center-block" alt="Lpg">
                <figcaption class="figure-caption text-center font-weight-bold price">@Html.DisplayFor(Model => Model.Lpg)</figcaption>
            </figure>
        </div>
    </div>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="d-block img-fluid" src="http://placehold.it/1280x500" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="http://placehold.it/1280x500" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="http://placehold.it/1280x500" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div id="nav-btns" class="btn-group btn-group-justified" role="group" aria-label="...">
        <div class="btn-group" role="group">
            <button id="btn-1" type="button" class="btn btn-default btn-scale">
                <img src="http://placehold.it/512x512" alt="..." class="btn-img">
            </button>
        </div>
        <div class="btn-group" role="group">
            <button id="btn-2" type="button" class="btn btn-default btn-scale">
                <img src="http://placehold.it/512x512" alt="..." class="btn-img">
            </button>
        </div>
        <div class="btn-group" role="group">
            <button id="btn-3" type="button" class="btn btn-default btn-scale">
                <img src="http://placehold.it/512x512" alt="..." class="btn-img">
            </button>
        </div>
    </div>
</div>