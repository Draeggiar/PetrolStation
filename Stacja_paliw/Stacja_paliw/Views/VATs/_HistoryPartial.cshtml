@model IEnumerable<DomainModel.VAT>

@{
    ViewBag.Title = "_HistoryPartial";
}

@if (Model != null)
{
    if (Model.Any())
    {
        <table class="table table-sm table-hover">
            <thead class="thead-default">
                <tr>
                    <th>Numer faktury</th>
                    <th>Data</th>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Kwota</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr onclick="location.href = '@Url.Action("Details", "VATs", new { id = item.Id })'">
                        <td>@Html.DisplayFor(modelItem => item.NoVAT)</td>
                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.ClientFirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.ClientLastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.TotalPrice)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h4>Brak faktur do wyświetlenia</h4>
    }

}